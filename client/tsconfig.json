{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"build",
	]
}
