{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  // Specifies the ESLint parser
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-multi-spaces": [
      "error"
    ],
    "no-prototype-builtins": "off",
    "@typescript-eslint/no-var-requires": "off"
  },
  "env": {
    "node": true
  }
}